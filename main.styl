$gris = rgba(0,0,0,0.8)
$grisClaro = rgba(0,0,0,0.3)
$grisMuyClaro = rgba(0,0,0,0.05)


*
	padding 0
	margin 0
	box-sizing border-box
	text-decoration none
	
	
.header__nav
	list-style none
	display flex
	justify-content flex-end


.header__nav-item
	margin 0.5rem 
	margin-top 1rem
	margin-right 1.2rem

.header__nav-item-a
	color $gris
	font-size 0.8rem
	text-decoration none
	
.header__nav-item-user
	color white
	padding 0.5rem
	border-radius 50% 
	background-color green
	







.google-Container
	display grid
	grid-template-columns auto auto auto
	

.google-ContainerSmall
	margin-top 10rem
	display grid
	justify-content center


.googleLogo_img
	position relative
	left 7rem

	
.googleSearch__searchBar
	border .005rem  solid $grisClaro
	width 30rem
	height 2.5rem
	border-radius 25px 25px 25px 25px
	
.googleSearch__searchBar:focus
	border-color red
	width 40rem
	height 2.2rem
	border-radius 25px 25px 25px 25px
	color none

.googleSearch-botones
	color $gris
	background-color $grisMuyClaro
	padding 0.8rem 1.5rem
	border  white 1px 
	border-radius 3px 3px 3px 3px
	margin-top 1rem
	margin-left 1rem
	position relative
	left 2rem
	
.languagueOffer
	margin-top 1rem
	color $gris
	font-size 0.8rem
	text-decoration none
	position relative
	left 3rem






	

.footer
	color $gris
	width 100% 
	height 5rem
	background-color $grisClaro
	position absolute
	bottom 0rem
	

.footer__country
	padding .5rem


.footer__div
	display flex
	justify-content space-between
	
.footer__div-div
	padding-top .5rem
	padding-left .4rem
	

.footer__div-div-a
	font-size 0.8rem
	color $gris